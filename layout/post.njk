{% extends "_layout.njk" %}

{% block content %}
  <!-- Post layout. -->
	<div class="mdl-card__supporting-text post-content">
    <!-- Post title. -->
		<h1>{{ page.title }}</h1>
    <!-- Author area. TODO -->
    <pre> Tags: {{ list_tags(page.tags, {
        show_count: false,
        style: 'false',
        separator: '  '
      }) }} Categories: {{ list_categories(page.categories, {
        show_count: false,
        style: 'false',
        separator: '  '
      }) }} </pre>
    <!-- Post content. -->
		{{ page.content }}
    <!-- Post footer. -->
    <pre>Last updated: {{ 
      page.updated.year() 
    }}/{{ 
      page.updated.month() 
    }}/{{ 
      page.updated.day() }}
    </pre>
	</div>
{% endblock %}
