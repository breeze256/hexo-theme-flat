{% extends "_layout.njk" %}

{% block content %}
  <!-- Post layout. -->
	<div class="mdl-card__supporting-text post-content">
    <!-- Post title. -->
		<h1>{{ page.title }}</h1>
    <!-- Author area. TODO -->
    <pre>AUTHOR AREA (TODO).</pre>
    <p>
      Tags: {{ list_tags(page.tags, {
      show_count: false,
      style: 'false',
      separator: '  '
      }) }} &nbsp
      Categories: {{ list_categories(page.categories, {
      show_count: false,
      style: 'false',
      separator: '  '
      }) }}
    </p>
    <!-- Post content. -->
		{{ page.content }}
	</div>
{% endblock %}
