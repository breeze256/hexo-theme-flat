{% extends "_layout.njk" %}

{% block content %}

    <pre>There is index.njk.</pre>

    <h3>Posts</h3>


    {%- for post in page.posts.toArray() %}

        <div class="mdl-color-text--grey-600 mdl-card__supporting-text mdl-shadow--2dp">
            <a href="/{{ post.path }}">{{ post.title }}</a>
            <br />
            {{ post.path }}
            <br />
            {{ post.slug }}
            <br />
            {{ post._id }}
            <br />
            {{ post.title }}
            <br />
            {{ post.date }}
        </div>

    {%- endfor %}

{% endblock %}

