<!DOCTYPE html>
<html lang="{{ page.lang }}">
  <!-- HTML head, it contains style files and site information. -->
  <head>
    {{ partial("_partials/head.njk", {}, {cache: theme.cache.enable}) }}
    <title>
      {{ config.title }}
    </title>
  </head>
  <!-- Load pjax. -->
  {%- if theme.pjax %}
    {%- include "_widgets/pjax.njk" %}
  {%- endif %}
  <!-- HTML body without header. -->
  <body>
    <!-- No header, and the drawer stays open on larger screens.
      We use this fixed drawer for convience and better mobile performance. -->
    <div id="pjax-container" class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer site-layout">
      <!-- Drawer layout. This part can be seen as "header". -->
      <div class="mdl-layout__drawer site-drawer">
        {%- include "_partials/drawer.njk" -%}
      </div>
      <!-- Main content, extended in specific pages. -->
      <main class="mdl-layout__content content-container">
        {% block content %}{% endblock %}
      </main>
    </div>
    <!-- APlayer. -->
    {%- if theme.aplayer.enable %}
      {%- include "_widgets/aplayer.njk" -%}
    {%- endif %}
  </body>
</html>