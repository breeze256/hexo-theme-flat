<!-- Post entry card. -->
<div class="mdl-color-text--grey-600 mdl-card__supporting-text mdl-shadow--2dp mdl-cell mdl-cell--12-col post-entry">
	<div class="post-entry--content">
    <!-- Entry title. -->
		<p class="post-entry--title">
			<a href="/{{ post.path }}">{{ post.title }}</a>
		</p>
    <p>{{ post.excerpt }}</p>
    <p>...<a href="/{{ post.path }}">Read more</a></p>
    <!-- Other information. -->
    <hr>
		ID: {{ post._id }}
	</div>
</div>