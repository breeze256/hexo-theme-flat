<!-- Post entry card. -->
<div class="mdl-card__supporting-text mdl-shadow--2dp mdl-cell mdl-cell--12-col post-entry">
	<div class="post-entry__content">
    <!-- Entry title. -->
		<p class="post-entry__title">
			<a href="/{{ post.path }}">{{ post.title }}</a>
		</p>
    {{ post.excerpt }}
    <p>...<a href="/{{ post.path }}">Read more</a></p>
    <!-- Other information. -->
    <hr>
    <pre>Categories: {{ list_categories(post.categories, {
        show_count: false,
        style: 'false',
        separator: '  '
      }) }}</pre>
	</div>
</div>